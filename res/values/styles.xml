<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    
    
   <style name="setting_bg_layout">
       	<item name="android:orientation">vertical</item>
       	<item name="android:background">@drawable/setting_shape_bg</item>
       	<item name="android:layout_width">fill_parent</item>
      	<item name="android:layout_height">wrap_content</item>
       	<item name="android:layout_marginLeft">8.0dip</item>
       	<item name="android:layout_marginTop">10.0dip</item>
       	<item name="android:layout_marginRight">8.0dip</item>   
   </style>
    
   <style name="setting_bg_base_layout">
       	<item name="android:orientation">horizontal</item>
       	<item name="android:layout_width">fill_parent</item>
      	<item name="android:layout_height">wrap_content</item>
      	<item name="android:gravity">center_vertical</item>
       	<item name="android:paddingTop">16.0dip</item>
       	<item name="android:paddingBottom">16.0dip</item>
       	<item name="android:focusable">true</item>
       	<item name="android:clickable">true</item>   
   </style>
      
   <style name="setting_bg_top_layout" parent="@style/setting_bg_base_layout">
       <item name="android:background">@drawable/setting_bg_top_selector</item>
   </style>
                            
   <style name="setting_bg_bottom_layout" parent="@style/setting_bg_base_layout">
       	<item name="android:background">@drawable/setting_bg_bottom_selector</item> 
   </style>
   
   <style name="edittext">
       <item name="android:layout_width">180dp</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_marginRight">12.0dip</item>
       <item name="android:layout_weight">1.0</item>
       <item name="android:textColor">#ff333333</item>
       <item name="android:textSize">16.0sp</item>
       <item name="android:singleLine">true</item>
       <item name="android:background">@drawable/setting_edittext</item>
   </style>
   <style name="textview">
       <item name="android:layout_width">wrap_content</item>
       <item name="android:layout_height">wrap_content</item>
       <item name="android:layout_marginLeft">12.0dip</item>
       <item name="android:layout_weight">1.0</item>
       <item name="android:textColor">#ff333333</item>
       <item name="android:textSize">16.0dip</item>
   </style>
</resources>
