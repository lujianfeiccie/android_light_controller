<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/title_back"
        android:visibility="visible" />

    <ImageView
        android:id="@id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageView1"
        android:scaleType="fitXY"
        android:src="@drawable/back" />

    <Button
        android:id="@id/btn_home"
        android:layout_width="50.0dip"
        android:layout_height="30.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/btn_home_background"
        android:visibility="visible" />

    <ImageView
        android:id="@id/imageView3"
        android:layout_width="80.0dip"
        android:layout_height="30.0dip"
        android:layout_alignTop="@id/btn_home"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:visibility="invisible" />

    <TextView
        android:id="@id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btn_home"
        android:layout_alignBottom="@id/btn_home"
        android:layout_marginLeft="35.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_toRightOf="@id/imageView3"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:visibility="visible" />

    <TextView
        android:id="@id/tv"
        android:layout_width="1.0dip"
        android:layout_height="1.0dip"
        android:layout_centerInParent="true" />

    <com.lujianfei.icecontroller.ui.custom.TwoKeyButton
        android:id="@id/btn_1"
        android:layout_width="52.0dip"
        android:layout_height="115.0dip"
        android:layout_alignLeft="@id/menu_ll"
        android:layout_below="@id/menu_ll"
        offBackground="@drawable/one_1_down"
        normalBackground="@drawable/one_1"
        onBackground="@drawable/one_1_up" />

    <com.lujianfei.icecontroller.ui.custom.TwoKeyButton
        android:id="@id/btn_2"
        android:layout_width="52.0dip"
        android:layout_height="115.0dip"
        android:layout_below="@id/menu_ll"
        android:layout_marginLeft="16.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_toRightOf="@id/btn_1"
        offBackground="@drawable/one_2_down"
        normalBackground="@drawable/one_2"
        onBackground="@drawable/one_2_up" />

    <com.lujianfei.icecontroller.ui.custom.TwoKeyButton
        android:id="@id/btn_3"
        android:layout_width="52.0dip"
        android:layout_height="115.0dip"
        android:layout_below="@id/menu_ll"
        android:layout_marginRight="16.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_toLeftOf="@id/btn_4"
        offBackground="@drawable/one_3_down"
        normalBackground="@drawable/one_3"
        onBackground="@drawable/one_3_up" />

    <com.lujianfei.icecontroller.ui.custom.TwoKeyButton
        android:id="@id/btn_4"
        android:layout_width="52.0dip"
        android:layout_height="115.0dip"
        android:layout_alignRight="@id/menu_ll"
        android:layout_below="@id/menu_ll"
        offBackground="@drawable/one_4_down"
        normalBackground="@drawable/one_4"
        onBackground="@drawable/one_4_up" />

    <LinearLayout
        android:id="@id/menu_ll"
        android:layout_width="250.0dip"
        android:layout_height="220.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Button
                    android:id="@id/btn_night"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/btn_night_background" />

                <TextView
                    android:id="@id/tv_night"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Night"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Button
                    android:id="@id/btn_meeting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/btn_meeting_background" />

                <TextView
                    android:id="@id/tv_meeting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Meeting"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Button
                    android:id="@id/btn_reading"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/btn_reading_background" />

                <TextView
                    android:id="@id/tv_reading"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Reading"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Button
                    android:id="@id/btn_mode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/btn_mode_background" />

                <TextView
                    android:id="@id/tv_mode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Mode"
                    android:textColor="#ffffffff" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Button
                    android:id="@id/btn_timer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/btn_timer_background" />

                <TextView
                    android:id="@id/tv_timer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Timer"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Button
                    android:id="@id/btn_alarm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/btn_alarm_background" />

                <TextView
                    android:id="@id/tv_alarm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Alarm"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Button
                    android:id="@id/btn_sleep"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/btn_sleep_background" />

                <TextView
                    android:id="@id/tv_sleep"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Sleep"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Button
                    android:id="@id/btn_recreation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5.0dip"
                    android:background="@drawable/btn_recreation_background" />

                <TextView
                    android:id="@id/tv_recreation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Recreation"
                    android:textColor="#ffffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@id/btn_on"
        android:layout_width="90.0dip"
        android:layout_height="40.0dip"
        android:layout_alignLeft="@id/menu_ll"
        android:layout_marginTop="45.0dip"
        android:background="@drawable/btn_on_background" />

    <Button
        android:id="@id/btn_off"
        android:layout_width="90.0dip"
        android:layout_height="40.0dip"
        android:layout_alignBaseline="@id/btn_on"
        android:layout_alignRight="@id/menu_ll"
        android:background="@drawable/btn_off_background" />

</RelativeLayout>