<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/title_back" />

    <ImageView
        android:id="@id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageView1"
        android:scaleType="fitXY"
        android:src="@drawable/back" />

    <Buttonn
        android:id="@id/btn_home"
        android:layout_width="50.0dip"
        android:layout_height="30.0dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="75.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/btn_home_background" />

    <ImageView
        android:id="@id/imageView3"
        android:layout_width="80.0dip"
        android:layout_height="30.0dip"
        android:layout_alignTop="@id/btn_home"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:visibility="invisible" />

    <TextView
        android:id="@id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btn_home"
        android:layout_alignBottom="@id/btn_home"
        android:layout_marginLeft="100.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_toRightOf="@id/imageView3"
        android:singleLine="true"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@id/tv"
        android:layout_width="1.0dip"
        android:layout_height="1.0dip"
        android:layout_centerInParent="true" />

    <com.lujianfei.icecontroller.ui.custom.TwoKeyButton
        android:id="@id/btn_1"
        android:layout_width="124.0dip"
        android:layout_height="270.0dip"
        android:layout_alignLeft="@id/menu_ll"
        android:layout_below="@id/menu_ll"
        android:layout_marginTop="0.0dip"
        offBackground="@drawable/one_1_down"
        normalBackground="@drawable/one_1"
        onBackground="@drawable/one_1_up" />

    <com.lujianfei.icecontroller.ui.custom.TwoKeyButton
        android:id="@id/btn_2"
        android:layout_width="124.0dip"
        android:layout_height="270.0dip"
        android:layout_below="@id/menu_ll"
        android:layout_marginLeft="45.0dip"
        android:layout_marginTop="50.0dip"
        android:layout_toRightOf="@id/btn_1"
        offBackground="@drawable/one_2_down"
        normalBackground="@drawable/one_2"
        onBackground="@drawable/one_2_up" />

    <com.lujianfei.icecontroller.ui.custom.TwoKeyButton
        android:id="@id/btn_3"
        android:layout_width="124.0dip"
        android:layout_height="270.0dip"
        android:layout_below="@id/menu_ll"
        android:layout_marginRight="45.0dip"
        android:layout_marginTop="50.0dip"
        android:layout_toLeftOf="@id/btn_4"
        offBackground="@drawable/one_3_down"
        normalBackground="@drawable/one_3"
        onBackground="@drawable/one_3_up"  />

    <com.lujianfei.icecontroller.ui.custom.TwoKeyButton
        android:id="@id/btn_4"
        android:layout_width="124.0dip"
        android:layout_height="270.0dip"
        android:layout_alignRight="@id/menu_ll"
        android:layout_below="@id/menu_ll"
        android:layout_marginTop="0.0dip"
        offBackground="@drawable/one_4_down"
        normalBackground="@drawable/one_4"
        onBackground="@drawable/one_4_up" />

    <LinearLayout
        android:id="@id/menu_ll"
        android:layout_width="610.0dip"
        android:layout_height="550.0dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200.0dip"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Buttonn
                    android:id="@id/btn_night"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:background="@drawable/btn_night_background" />

                <TextView
                    android:id="@id/tv_night"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Night"
                    android:textColor="#ffffffff"
                    android:textSize="27.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Buttonn
                    android:id="@id/btn_meeting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:background="@drawable/btn_meeting_background" />

                <TextView
                    android:id="@id/tv_meeting"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Meeting"
                    android:textColor="#ffffffff"
                    android:textSize="27.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Buttonn
                    android:id="@id/btn_reading"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:background="@drawable/btn_reading_background" />

                <TextView
                    android:id="@id/tv_reading"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Reading"
                    android:textColor="#ffffffff"
                    android:textSize="27.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Buttonn
                    android:id="@id/btn_mode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:background="@drawable/btn_mode_background" />

                <TextView
                    android:id="@id/tv_mode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Mode"
                    android:textColor="#ffffffff"
                    android:textSize="27.0sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Buttonn
                    android:id="@id/btn_timer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:background="@drawable/btn_timer_background" />

                <TextView
                    android:id="@id/tv_timer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Timer"
                    android:textColor="#ffffffff"
                    android:textSize="27.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Buttonn
                    android:id="@id/btn_alarm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:background="@drawable/btn_alarm_background" />

                <TextView
                    android:id="@id/tv_alarm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Alarm"
                    android:textColor="#ffffffff"
                    android:textSize="27.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Buttonn
                    android:id="@id/btn_sleep"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:background="@drawable/btn_sleep_background" />

                <TextView
                    android:id="@id/tv_sleep"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Sleep"
                    android:textColor="#ffffffff"
                    android:textSize="27.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <Buttonn
                    android:id="@id/btn_recreation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:background="@drawable/btn_recreation_background" />

                <TextView
                    android:id="@id/tv_recreation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Recreation"
                    android:textColor="#ffffffff"
                    android:textSize="27.0sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Buttonn
        android:id="@id/btn_on"
        android:layout_width="200.0dip"
        android:layout_height="100.0dip"
        android:layout_alignLeft="@id/menu_ll"
        android:layout_marginTop="80.0dip"
        android:background="@drawable/btn_on_background" />

    <Buttonn
        android:id="@id/btn_off"
        android:layout_width="200.0dip"
        android:layout_height="100.0dip"
        android:layout_alignBaseline="@id/btn_on"
        android:layout_alignRight="@id/menu_ll"
        android:background="@drawable/btn_off_background" />

</RelativeLayout>